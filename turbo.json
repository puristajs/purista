{
  "pipeline": {
    "//#gitclean": {
      "dependsOn": [],
      "outputs": []
    },
     "//#release:prepare": {
      "dependsOn": [],
      "outputs": []
    },
     "//#tag": {
      "dependsOn": ["gitclean"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"]
    },
    "test": {},
    "lint": {},
    "document":{
      "dependsOn": ["^build","^lint","^test"],
      "outputs": ["docs/**"]
    },
    "publish": {
      "dependsOn": [],
      "outputs": []
    },
    "bump:major":{
      "dependsOn": ["^build","^lint","^test"],
      "outputs": ["package.json","package-lock.json"]
    },
    "bump:minor":{
      "dependsOn": ["^build","^lint","^test"],
      "outputs": ["package.json","package-lock.json"]
    },
    "bump:patch":{
      "dependsOn": ["^build","^lint","^test"],
      "outputs": ["package.json","package-lock.json"]
    },
    "dev": {
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.base.json"]
}