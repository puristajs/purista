{
  "version": "1.3.0",
  "private": true,
  "scripts": {
    "start": "npm run dev -w examples/simple",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "test": "turbo run test --parallel",
    "dev:doc": "npm run dev -w website",
    "release:major": "turbo run gitclean releaseprepare && npm run document -w website && turbo run gitclean && turbo run bump:major && npm run commit:major && npm publish --workspaces",
    "release:minor": "turbo run gitclean releaseprepare && npm run document -w website && turbo run gitclean && turbo run bump:minor && npm run commit:minor && npm publish --workspaces",
    "release:patch": "turbo run gitclean releaseprepare && npm run document -w website && turbo run gitclean && turbo run bump:patch && npm run commit:patch && npm publish --workspaces",
    "gitclean": "./scripts/isGitClean.sh",
    "releaseprepare": "turbo run lint build test --parallel",
    "tag": "git push && git push --tags && rm -rf build/temp",
    "commit:major": "npm version major --no-git-tag-version && scripts/commitVersion.sh",
    "commit:minor": "npm version minor --no-git-tag-version && scripts/commitVersion.sh",
    "commit:patch:": "npm version patch --no-git-tag-version && scripts/commitVersion.sh"
  },
  "workspaces": [
    "./packages/*",
    "./examples/*",
    "./website"
  ],
  "devDependencies": {
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.31",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "turbo": "latest",
    "typedoc": "^0.22.17",
    "typedoc-monorepo-link-types": "^0.0.2",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.7.4",
    "esbuild": "^0.14.47"
  }
}
