{
  "version": "1.4.7",
  "private": true,
  "scripts": {
    "start": "npm run dev -w examples/simple",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "test": "turbo run test --parallel",
    "dev:doc": "npm run dev -w website",
    "bump:major": "npm version major --no-git-tag-version",
    "bump:minor": "npm version minor --no-git-tag-version",
    "bump:patch": "npm version patch --no-git-tag-version",
    "release:major": "turbo run gitclean release:prepare && npm run document -w website && turbo run gitclean && turbo run bump:major && npm run commit:major && npm publish --workspaces",
    "release:minor": "turbo run gitclean release:prepare && npm run document -w website && turbo run gitclean && turbo run bump:minor && npm run commit:minor && npm publish --workspaces",
    "release:patch": "turbo run gitclean release:prepare && npm run document -w website && turbo run gitclean && turbo run bump:patch && npm run commit:patch && npm publish --workspaces",
    "gitclean": "./scripts/isGitClean.sh",
    "release:prepare": "turbo run lint build test --parallel",
    "tag": "git push && git push --tags && rm -rf build/temp",
    "commit:major": "npm version major --no-git-tag-version && scripts/commitVersion.sh",
    "commit:minor": "npm version minor --no-git-tag-version && scripts/commitVersion.sh",
    "commit:patch": "npm version patch --no-git-tag-version && scripts/commitVersion.sh",
    "vuepress": "npm run vuepress -w website"
  },
  "workspaces": [
    "./packages/*",
    "./examples/*",
    "./website"
  ],
  "devDependencies": {
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.31",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "esbuild": "^0.15.9",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "turbo": "latest",
    "typedoc": "^0.23.15",
    "typedoc-monorepo-link-types": "^0.0.4",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@purista/simple-example": "^1.4.1"
  }
}
