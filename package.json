{
  "name": "@purista/core",
  "version": "1.0.5",
  "description": "purista backend framwork",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "vuepress dev doc_src",
    "docs:clean-dev": "vuepress dev doc_src --clean-cache",
    "----------------------- TEST & LINTING -------------------------------------": "",
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "jest",
    "----------------------- BUILDING -------------------------------------------": "",
    "build:lib": "tsc",
    "build:api": "typedoc --plugin typedoc-plugin-markdown --out doc_src/api src/index.ts",
    "build:doc": "vuepress build doc_src",
    "build": "npm run build:lib && npm run build:api && npm run build:doc",
    "----------------------- PUBLISHING -----------------------------------------": "",
    "prepublishOnlyxx": "npm test && npm run lint",
    "preparexx": "npm run test && npm run build",
    "preversionxx": "npm run lint",
    "version": "npm run lint && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.21",
    "@types/jest": "^27.5.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.31",
    "@types/sinon": "^10.0.11",
    "@types/swagger-ui-dist": "^3.30.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vuepress/plugin-search": "^2.0.0-beta.41",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4",
    "@vuepress/client": "^2.0.0-beta.43",
    "vue": "^3.2.33",
    "vuepress": "^2.0.0-beta.43",
    "vuepress-theme-hope": "^2.0.0-beta.54"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^1.3.0",
    "helmet": "5.0.2",
    "mime-types": "2.1.35",
    "nanoid": "^3.3.4",
    "openapi3-ts": "^2.0.2",
    "sinon": "^14.0.0",
    "swagger-ui-dist": "^4.11.0",
    "trouter": "^3.2.0",
    "tslog": "^3.3.3",
    "wildcard-match": "^5.1.2",
    "zod": "^3.15.1"
  }
}
