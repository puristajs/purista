{
  "version": "1.5.0",
  "private": true,
  "scripts": {
    "start": "npm run dev -w examples/fullexample",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "test": "turbo run test --parallel",
    "dev:doc": "npm run dev -w website",
    "bump:major": "npm version major --no-git-tag-version",
    "bump:minor": "npm version minor --no-git-tag-version",
    "bump:patch": "npm version patch --no-git-tag-version",
    "update:doc": "npm run gitclean && typedoc && git commit -am \"doc: update api documentation\" && npm run document -w website && git-cliff > CHANGELOG.md && git commit -am \"doc: update CHANGELOG\"",
    "release:major": "turbo run gitclean && npm run release:prepare && npm run update:doc && turbo run gitclean && turbo run bump:major && npm run commit:major && npm publish --workspaces",
    "release:minor": "turbo run gitclean && npm run release:prepare && npm run update:doc && turbo run gitclean && turbo run bump:minor && npm run commit:minor && npm publish --workspaces",
    "release:patch": "turbo run gitclean && npm run release:prepare && npm run update:doc && turbo run gitclean && turbo run bump:patch && npm run commit:patch && npm publish --workspaces",
    "gitclean": "./scripts/isGitClean.sh",
    "release:prepare": "turbo run lint build test --parallel",
    "tag": "git push && git push --tags && rm -rf build/temp",
    "commit:major": "npm version major --no-git-tag-version && scripts/commitVersion.sh",
    "commit:minor": "npm version minor --no-git-tag-version && scripts/commitVersion.sh",
    "commit:patch": "npm version patch --no-git-tag-version && scripts/commitVersion.sh",
    "vuepress": "npm run vuepress -w website",
    "check:cycling": "npx madge --circular --exclude '\\.d\\.ts$' --extensions ts ./packages"
  },
  "workspaces": [
    "./packages/*",
    "./examples/*",
    "./website"
  ],
  "devDependencies": {
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "esbuild": "^0.17.13",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "git-cliff": "^1.1.2",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "sinon": "^15.0.2",
    "testcontainers": "^9.6.0",
    "turbo": "1.8.5",
    "typedoc": "^0.23.28",
    "typedoc-monorepo-link-types": "^0.0.4",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "npm@9.6.2"
}
