		"typescript": "^5.5.4",
		"vitest": "^3.0.4"
	},
	"dependencies": {
		"@fastify/static": "^8.0.3",
		"@purista/core": "*",
		"@purista/httpserver": "*",
		"@purista/mqttbridge": "*",
		"zod": "^3.24.1"
	}
}
