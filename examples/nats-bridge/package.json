    "tsx": "^4.7.0"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@purista/natsbridge": "*",
    "@purista/nats-state-store": "*",
    "@purista/core": "*",
    "@purista/httpserver": "*",
    "zod": "^3.22.4"
  }
