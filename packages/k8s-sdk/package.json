{
  "name": "@purista/k8s-sdk",
  "version": "1.9.1",
  "description": "SDK and helper to run PURISTA services in Kubernetes",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "vitest",
    "build": "rimraf dist && tshy"
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "tshy": "^1.8.1",
    "@hono/node-server": "^1.3.2",
    "@types/node": "^20.9.2",
    "@types/sinon": "^17.x",
    "vitest": "^1.0.2",
    "sinon": "^17.x"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/semantic-conventions": "^1.18.1",
    "@purista/core": "*",
    "hono": "^3.11.4"
  },
  "peerDependencies": {
    "@hono/node-server": "^1.3.2"
  },
  "peerDependenciesMeta": {
    "@hono/node-server": {
      "optional": true
    }
  },
  "types": "./dist/commonjs/index.d.ts"
}
