{
  "name": "@purista/mqttbridge",
  "version": "1.9.1",
  "description": "MQTT eventbridge for PURISTA backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "vitest",
    "build": "rimraf dist && tshy"
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "tshy": "^1.8.2",
    "@types/node": "^20.10.8",
    "@types/sinon": "^17.0.3",
    "@types/ws": "^8.5.9",
    "vitest": "^1.1.3",
    "sinon": "^17.x"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "@purista/core": "*",
    "mqtt": "^5.3.4"
  },
  "peerDependenciesMeta": {},
  "types": "./dist/commonjs/index.d.ts"
}
