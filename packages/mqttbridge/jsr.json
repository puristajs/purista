{
	"$schema": "https://jsr.io/schema/config-file.v1.json",
	"name": "@purista/mqttbridge",
	"version": "1.11.0",
	"description": "MQTT eventbridge for PURISTA backend framework",
	"keywords": ["purista", "mqtt", "typescript", "javascript"],
	"exports": "./dist/esm/index.js",
	"publish": {
		"include": ["dist/**/*.js", "dist/**/*.d.ts", "README.md", "package.json"],
		"exclude": [
			"src",
			".github",
			".vscode",
			".zed",
			"!dist",
			"!dist/**/*.js",
			"!dist/**/*.d.ts",
			".tshy",
			".tshy-build",
			"vendor",
			"docs",
			"typedoc.json",
			"..eslintcache",
			".npmignore"
		]
	}
}
