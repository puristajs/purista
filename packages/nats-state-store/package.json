{
  "name": "@purista/nats-state-store",
  "version": "1.11.0",
  "description": "State store with NATS as backend",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:puristajs/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "vitest",
    "build": "rimraf dist && tshy"
  },
  "tshy": {
    "exclude": [
      "src/**/*.test.ts"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "@testcontainers/nats": "^10.6.0",
    "@types/node": "^20.11.17",
    "@types/sinon": "^17.0.3",
    "sinon": "^17.0.1",
    "tshy": "^1.11.1",
    "vitest": "^1.3.0"
  },
  "dependencies": {
    "@purista/core": "*",
    "nats": "^2.19.0"
  },
  "peerDependenciesMeta": {},
  "types": "./dist/commonjs/index.d.ts"
}
