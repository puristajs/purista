{
  "name": "@purista/cli",
  "version": "1.5.0",
  "description": "cli helper for PURISTA backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "preferGlobal": "true",
  "main": "lib/index.js",
  "type": "module",
  "bin": {
    "purista": "./lib/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "start": "./lib/index.js",
    "build": "tsc --project ./tsconfig.json && chmod 755 lib/index.js",
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "jest --passWithNoTests",
    "bump:major": "npm version major --no-git-tag-version",
    "bump:minor": "npm version minor --no-git-tag-version",
    "bump:patch": "npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.9"
  },
  "dependencies": {
    "eslint": "^8.36.0",
    "camelcase": "^7.0.1",
    "minimist": "^1.2.8",
    "plop": "^3.1.2",
    "ts-morph": "^18.0.0",
    "zod": "^3.21.4"
  },
  "peerDependenciesMeta": {},
  "files": [
    "blueprint/**/*",
    "lib/**/*"
  ]
}
