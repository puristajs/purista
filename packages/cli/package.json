{
  "name": "@purista/cli",
  "version": "1.9.1",
  "description": "cli helper for PURISTA backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "preferGlobal": "true",
  "main": "lib/index.js",
  "type": "module",
  "bin": {
    "purista": "./lib/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "start": "./lib/index.js",
    "build": "tsc --project ./tsconfig.json && chmod 755 lib/index.js",
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "vitest"
  },
  "tshy": {
    "exclude": [
      "src/**/*.test.ts"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.12",
    "tshy": "^1.11.0"
  },
  "dependencies": {
    "camelcase": "^8.0.0",
    "eslint": "^8.56.0",
    "minimist": "^1.2.8",
    "plop": "^4.0.1",
    "ts-morph": "^21.0.1",
    "zod": "^3.22.4"
  },
  "peerDependenciesMeta": {},
  "files": [
    "blueprint/**/*",
    "lib/**/*"
  ]
}
