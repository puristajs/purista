{
	"name": "@purista/cli",
	"version": "2.0.3",
	"description": "cli helper for PURISTA backend framework",
	"homepage": "https://purista.dev",
	"repository": {
		"type": "git",
		"url": "git@github.com:puristajs/purista.git"
	},
	"author": "Sebastian Wessel",
	"license": "ISC",
	"preferGlobal": "true",
	"main": "./dist/commonjs/api/index.js",
	"type": "module",
	"bin": {
		"purista": "./dist/commonjs/bin.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18.15"
	},
	"scripts": {
		"start": "./dist/bin.js",
		"dev": "tsx src/bin.ts",
		"build": "rimraf dist && tshy && chmod 755 dist/commonjs/bin.js",
		"lint": "npx @biomejs/biome check --write",
		"test": "vitest"
	},
	"tshy": {
		"exclude": ["src/**/*.test.ts"],
		"exports": {
			"./package.json": "./package.json",
			".": "./src/api/index.ts"
		}
	},
	"devDependencies": {
		"@types/minimist": "^1.2.5",
		"@types/node": "^22.5.1",
		"esbuild": "^0.25.0",
		"rimraf": "^6.0.1",
		"tshy": "^3.0.2",
		"tsx": "^4.15.7",
		"type-fest": "^4.34.1"
	},
	"dependencies": {
		"@inquirer/confirm": "^5.1.5",
		"@inquirer/input": "^4.1.5",
		"@inquirer/select": "^4.0.8",
		"code-block-writer": "^13.0.3",
		"commander": "^13.1.0",
		"ts-morph": "^25.0.1",
		"zod": "^3.24.2"
	},
	"peerDependenciesMeta": {},
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/esm/api/index.d.ts",
				"default": "./dist/esm/api/index.js"
			},
			"require": {
				"types": "./dist/commonjs/api/index.d.ts",
				"default": "./dist/commonjs/api/index.js"
			}
		}
	},
	"types": "./dist/commonjs/api/index.d.ts",
	"module": "./dist/esm/api/index.js"
}
