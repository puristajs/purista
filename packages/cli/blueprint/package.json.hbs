{
  "name": "myProject",
  "version": "1.4.9",
  "description": "PURISTA blueprint project",
  "engines": {
  "node": ">=18"
  },
  "main": "src/index.ts",
  {{#if isEsm}}
  "type": "module",
  {{/if}}
  "scripts": {
    "start": "tsx src/index.ts | pino-pretty",
    {{#if isEsm}}
    "test": "vitest",
    {{else}}
    "test": "jest",
    {{/if}}
    {{#if (eq linter "eslint")}}
    "lint": "eslint --ext .ts,.js,.json --cache .",
    "lint:fix": "eslint . --ext .ts,.js,.json --fix",
    {{/if}}
    {{#if (eq linter "biome")}}
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    {{/if}}
    "purista": "purista add"
  }
}