{
  "name": "@purista/testhelper",
  "version": "1.2.0",
  "description": "Unit test helper for PURISTA backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs"
    }
  },
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build_old": "tsc --project ./tsconfig.ref.json",
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "jest --passWithNoTests",
    "build": "node ../../scripts/buildesm.js && tsc --emitDeclarationOnly --declaration --outDir lib/types --project ./tsconfig.ref.json",
    "bump:major":"npm version major --no-git-tag-version",
    "bump:minor":"npm version minor --no-git-tag-version",
    "bump:patch:":"npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "@purista/core": "*",
    "@types/jest": "^27.x",
    "@types/sinon": "^10.x",
    "jest": "^28.x",
    "sinon": "^14.x"
  },
  "dependencies": {
    "@purista/core": "*"
  },
  "peerDependencies": {
    "@types/jest": "^27.x",
    "@types/sinon": "^10.x",
    "jest": "^28.x",
    "sinon": "^14.x"
  },
  "peerDependenciesMeta": {
    "@types/sinon": {
      "optional": true
    },
    "@types/jest": {
      "optional": true
    },
    "@purista/core": {
      "optional": false
    },
    "jest": {
      "optional": false
    },
    "sinon": {
      "optional": false
    }
  }
}
