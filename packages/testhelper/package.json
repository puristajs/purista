{
  "name": "@purista/testhelper",
  "version": "1.0.0",
  "description": "Unit test helper for PURISTA backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "----------------------- TEST & LINTING -------------------------------------": "",
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "echo test for test mock?",
    "----------------------- BUILDING -------------------------------------------": "",
    "build": "tsc",
    "----------------------- PUBLISHING -----------------------------------------": "",
    "prepublishOnly": "npm test && npm run lint",
    "prepare": "npm run test && npm run build",
    "preversion": "npm run lint",
    "version": "npm run lint && git add -A src",
    "postversionX": "git push && git push --tags"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.21",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4",
    "@purista/core": "latest"
  },
  "peerDependencies": {
    "@purista/core": "latest",
    "@types/jest": "^27.x",
    "@types/sinon": "^10.x",
    "jest": "^28.x",
    "sinon": "^14.x"
  },
  "peerDependenciesMeta": {
    "@types/sinon": {
      "optional": true
    },
    "@types/jest": {
      "optional": true
    },
    "@purista/core": {
      "optional": false
    },
    "jest": {
      "optional": false
    },
    "sinon": {
      "optional": false
    }
  }
}
