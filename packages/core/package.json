{
  "name": "@purista/core",
  "version": "1.5.0",
  "description": "purista backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs"
    }
  },
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "build_old": "tsc --project ./tsconfig.ref.json",
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "jest --passWithNoTests",
    "build": "rimraf lib && node ../../scripts/buildesm.js && tsc --emitDeclarationOnly --declaration --project ./tsconfig.ref.json",
    "bump:major": "npm version major --no-git-tag-version",
    "bump:minor": "npm version minor --no-git-tag-version",
    "bump:patch": "npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "@swc/core": "^1.3.42",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "hono": "^3.1.5",
    "sinon": "^15.0.2",
    "trouter": "^3.2.1"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^1.12.0",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/resources": "^1.10.1",
    "@opentelemetry/sdk-trace-node": "^1.10.1",
    "@opentelemetry/semantic-conventions": "^1.10.1",
    "cloudevents": "^6.0.4",
    "openapi3-ts": "3.2.0",
    "pino": "^8.11.0",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "@types/jest": "^29.5.0",
    "@types/sinon": "^10.x",
    "hono": "^3.1.5",
    "jest": "^29.x",
    "sinon": "^15.x",
    "trouter": "^3.2.1"
  },
  "peerDependenciesMeta": {
    "@types/sinon": {
      "optional": true
    },
    "@types/jest": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "sinon": {
      "optional": true
    },
    "hono": {
      "optional": true
    },
    "trouter": {
      "optional": true
    }
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "tsconfig": "./tsconfig.ref.json"
  }
}
