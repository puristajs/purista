{
  "name": "@purista/core",
  "version": "1.9.1",
  "description": "purista backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs",
      "types": "./lib/types/index.d.ts"
    }
  },
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "jest",
    "build": "rimraf lib && node ../../scripts/buildesm.js && tsc --emitDeclarationOnly --declarationMap false --declaration --outDir lib/types --project ./tsconfig.ref.json",
    "build:dev": "rimraf lib && node ../../scripts/buildesm.js && tsc --emitDeclarationOnly --declaration --outDir lib/types --project ./tsconfig.ref.json"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.8",
    "hono": "^3.10.1",
    "sinon": "^17.0.1",
    "trouter": "^3.2.1"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/resources": "^1.18.1",
    "@opentelemetry/sdk-trace-node": "^1.18.1",
    "@opentelemetry/semantic-conventions": "^1.18.1",
    "openapi3-ts": "^4.1.2",
    "pino": "^8.16.2",
    "zod": "^3.22.4",
    "ts-deepmerge": "^6.1.0"
  },
  "peerDependencies": {
    "@types/jest": "^29.5.8",
    "@types/sinon": "^17.x",
    "jest": "^29.x",
    "sinon": "^17.x"
  },
  "peerDependenciesMeta": {
    "@types/sinon": {
      "optional": true
    },
    "@types/jest": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "sinon": {
      "optional": true
    }
  }
