{
  "name": "@purista/core",
  "version": "1.7.0",
  "description": "purista backend framework",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs",
      "types": "./lib/types/index.d.ts"
    }
  },
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "jest",
    "build": "rimraf lib && node ../../scripts/buildesm.js && tsc --emitDeclarationOnly --declarationMap false --declaration --outDir lib/types --project ./tsconfig.ref.json",
    "build:dev": "rimraf lib && node ../../scripts/buildesm.js && tsc --emitDeclarationOnly --declaration --outDir lib/types --project ./tsconfig.ref.json",
    "bump:major": "npm version major --no-git-tag-version",
    "bump:minor": "npm version minor --no-git-tag-version",
    "bump:patch": "npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "@swc/core": "^1.3.61",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.16",
    "hono": "^3.2.3",
    "sinon": "^15.1.0",
    "trouter": "^3.2.1"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/resources": "^1.13.0",
    "@opentelemetry/sdk-trace-node": "^1.13.0",
    "@opentelemetry/semantic-conventions": "^1.13.0",
    "cloudevents": "^7.0.1",
    "openapi3-ts": "^4.1.2",
    "pino": "^8.14.1",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "@types/jest": "^29.5.1",
    "@types/sinon": "^10.x",
    "jest": "^29.x",
    "sinon": "^15.x"
  },
  "peerDependenciesMeta": {
    "@types/sinon": {
      "optional": true
    },
    "@types/jest": {
      "optional": true
    },
    "jest": {
      "optional": true
    },
    "sinon": {
      "optional": true
    }
  }
}
