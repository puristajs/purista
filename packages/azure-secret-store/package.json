{
  "name": "@purista/azure-secret-store",
  "version": "1.9.0",
  "description": "State store adapter for Azure Key Vault",
  "homepage": "https://purista.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastianwessel/purista.git"
  },
  "author": "Sebastian Wessel",
  "license": "ISC",
  "directories": {
    "lib": "lib/index.js",
    "man": "docs",
    "example": "example"
  },
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.15"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.json  --cache . --fix",
    "test": "vitest",
    "build": "rimraf dist && tshy",
    "env:up": "docker compose -f docker-compose.yml up -d",
    "env:down": "docker compose -f docker-compose.yml down"
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "tshy": "^1.8.1",
    "@types/node": "^20.9.2",
    "@types/sinon": "^17.x",
    "dotenv": "^16.3.1",
    "vitest": "^1.0.2",
    "sinon": "^17.0.1",
    "testcontainers": "^10.2.2"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "@purista/core": "*"
  },
  "peerDependenciesMeta": {},
  "types": "./dist/commonjs/index.d.ts"
}
