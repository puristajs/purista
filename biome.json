{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
    "ignore":["**/lib/*","cookieconsent.js","package-lock.json","dist","*.d.ts","coverage","docs"]
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": ["**/lib/*","cookieconsent.js","package-lock.json","dist","*.d.ts","coverage","docs"],
    "attributePosition": "auto",
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle":"single",
      "arrowParentheses":"asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
